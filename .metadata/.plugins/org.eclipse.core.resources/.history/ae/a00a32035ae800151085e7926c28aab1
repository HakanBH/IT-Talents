package mobile.servlets;
import mobile.jdbc.*;
import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletRequestWrapper;
import javax.servlet.http.HttpServletResponse;

import mobile.model.User;

@WebServlet("/Registration")
public class Registration extends HttpServlet {
	private static final long serialVersionUID = 1L;
	
    public Registration() {
        super();
    }
    
    @Override
    protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
    	super.doGet(req, resp);
    }
    
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		response.setContentType("text/html; charset=UTF-8");
		
		String email = request.getParameter("email");
		String region = request.getParameter("region");
		String password = request.getParameter("password");
		String firstName = request.getParameter("first_name");
		String lastName = request.getParameter("last_name");
		String passConfirm = request.getParameter("password_confirm");
		
		User newUser = new User(email,password,firstName,lastName,region);
		UserDAO userDao = new UserDAO();

		PrintWriter out = response.getWriter();
		response.setContentType("text/html");  

		try {
//			userDao.register(u);
			response.sendRedirect(request.getRequestURI());

			out.println("<script type=\"text/javascript\">");  
			out.println("alert('deadbeef');");  
			out.println("</script>");
		} catch (Exception e) {
			response.sendRedirect(request.getRequestURI());

			out.println("<script type=\"text/javascript\">");  
			out.println("alert('На майка ти путката.');");  
			out.println("</script>");
		}
	}
}
