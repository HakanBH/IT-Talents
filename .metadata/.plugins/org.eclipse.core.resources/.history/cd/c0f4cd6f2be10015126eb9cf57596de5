import java.time.LocalDate;
import java.time.LocalDateTime;
import java.util.LinkedList;
import java.util.List;
import java.util.Map;
import java.util.TreeMap;

public class PostOffice implements Runnable{
	private static final int MAILS_TRESHOLD = 50;
	
	private List<MailObject> mails;
	private Map<LocalDate , List<MailObject>> archive;
	
	public PostOffice(){
		mails = new LinkedList<MailObject>();
		archive = new TreeMap<LocalDate, List<MailObject>>();
	}
	
	@Override
	public void run() {
		
	}

	public void addMail(MailObject m){
		synchronized(mails){
			mails.add(m);
		}
	}
	
	
}
